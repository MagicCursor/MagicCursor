{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Magic Cursor",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": false,
        "minimize": true,
        "unmaximize": false,
        "unminimize": false,
        "startDragging": false,
        "setAlwaysOnTop": true,
        "setDecorations": false,
        "setIgnoreCursorEvents": true,
        "setFullscreen": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.magiccursor.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        },
        "wix": {
          "language": "en-US"
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "shortDescription": "Magic Cursor - Desktop Overlay",
      "longDescription": "Magic Cursor is a desktop overlay application that creates beautiful fluid effects following your mouse cursor.",
      "copyright": "Copyright Â© 2024 Magic Cursor"
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Magic Cursor",
        "width": 1920,
        "height": 1080,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "fileDropEnabled": false,
        "focus": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "Magic Cursor"
    }
  }
}
