{
  "__chrome__manifest_version": 3,
  "__firefox__manifest_version": 2,
  "__opera__manifest_version": 2,
  "name": "Magic Cursor",
  "version": "1.0.0",
  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },
  "description": "Beautiful GPU-accelerated fluid trail that follows your mouse on every website",
  "homepage_url": "https://github.com/MagicCursor/MagicCursor",
  "short_name": "Magic Cursor",
  "__chrome__permissions": [
    "activeTab",
    "storage"
  ],
  "__chrome__host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "__firefox__permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "__opera__permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "__chrome__content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "__firefox__content_security_policy": "script-src 'self'; object-src 'self'",
  "__opera__content_security_policy": "script-src 'self'; object-src 'self'",
  "__chrome|firefox__author": "Magic Cursor Team",
  "__opera__developer": {
    "name": "Magic Cursor Team"
  },
  "__firefox__browser_specific_settings": {
    "gecko": {
      "id": "magic.cursor211@gmail.com",
      "strict_min_version": "109.0"
    }
  },
  "__chrome__minimum_chrome_version": "88",
  "__opera__minimum_opera_version": "36",
  "__chrome__action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Magic Cursor"
  },
  "__firefox__browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Magic Cursor",
    "browser_style": false
  },
  "__opera__browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Magic Cursor"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "__chrome__background": {
    "service_worker": "js/background.bundle.js"
  },
  "__firefox__background": {
    "scripts": [
      "js/background.bundle.js"
    ]
  },
  "__opera__background": {
    "scripts": [
      "js/background.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/contentScript.bundle.js"
      ]
    }
  ]
}